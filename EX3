def Face Interval (a,b,c,d,f,h) :
	  [a,b,c,d,f,h]
		if a < h : 
		A = h - a 
		A== b , c , d , f  -> ":)"    , A != b,c,d,f -> ":("
		###
		":("   (false)   ,   ":)"   (true)
		 return A 
		 
print(Face Interval(2,4,6,8,10,12)) :
