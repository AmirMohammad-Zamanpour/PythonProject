def 25-Mile Marathon(a,b,c,d):
		[ a+b+c+d ] = A
		if [ a+b+c+d ] = 25 ->true ,
            [ a+b+c+d ] != 25 ->false :
       return A
       
print(25-Mile Marathon(9+7+4+9):			    		


