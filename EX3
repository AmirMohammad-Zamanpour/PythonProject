def Robot Path (n,s,w,e):
		[n,s,w,e]=A
		n=1
	    s=2
	    w=3
	    e=4
	    ###
1_ [w+n+w+n+w]=11    , 2_ [e+n+e+e+n]=16	 
	   ###
	   if A = 11,16  -> true  ,  A != (11,16) -> false :	
	
print (Robot Path (1,1,3,3,4,2)):
	

