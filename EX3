Ex3_1
def collatz (n):
	m=0
	while n != 1:
	        if n % 2==0:
	        	n= n/2
	        else:
	        	n= n*3+1
	        m=m+1
	    return m 
print (collatz(10))


Ex3_2

def Max Adjacent Product(n,m,x,z):
###	
	(int)-> int
###
      if n>m :
      	   n= n*m
     if  n>x , m>x :
             n= n * m
     if  n>z , m>z :
            n= n*m
      return n
print (Max Adjacent Product (10,5,2,1))


